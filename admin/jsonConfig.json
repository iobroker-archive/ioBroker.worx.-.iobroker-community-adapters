{
    "i18n": true,
    "type": "panel",
    "items": {
        "mail": {
            "type": "text",
            "label": "APP username (eMail)",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "hidden": "data.server === \"Remote\""
        },
        "password": {
            "type": "password",
            "newLine": true,
            "repeat": false,
            "visible": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "label": "App Password",
            "hidden": "data.server === \"Remote\""
        },
        "ip": {
            "type": "text",
            "label": "IP from Mower",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "hidden": "data.server !== \"Remote\""
        },
        "pin": {
            "type": "password",
            "newLine": true,
            "repeat": false,
            "visible": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "label": "Pin Code",
            "hidden": "data.server !== \"Remote\""
        },
        "server": {
            "type": "select",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "options": [
                {
                    "label": "Worx",
                    "value": "worx"
                },
                {
                    "label": "Kress",
                    "value": "kress"
                },
                {
                    "label": "Landxcape",
                    "value": "landxcape"
                },
                {
                    "label": "Ferrex",
                    "value": "ferrex"
                },
                {
                    "label": "Remote",
                    "value": "Remote"
                }
            ],
            "label": "App Name"
        },
        "intervalMower": {
            "type": "number",
            "label": "Update interval in seconds",
            "tooltip": "Range_1",
            "min": 1,
            "max": 86400,
            "step": 1,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": 60,
            "hidden": "data.server !== \"Remote\""
        },
        "intervalCloud": {
            "type": "number",
            "label": "Update interval in minutes",
            "tooltip": "Range",
            "min": 10,
            "max": 1440,
            "step": 1,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": 60,
            "hidden": "data.server === \"Remote\""
        },
        "edgeCutDelay": {
            "type": "number",
            "label": "delay for edge cut",
            "newLine": true,
            "default": 5000,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "hidden": "data.server === \"Remote\""
        },
        "meterMin": {
            "type": "checkbox",
            "label": "Distance and time in min and m",
            "newLine": true,
            "default": false,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "hidden": "data.server === \"Remote\""
        },
        "updateMqtt": {
            "type": "checkbox",
            "label": "Updating MQTT data after token update.",
            "newLine": true,
            "default": false,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "hidden": "data.server === \"Remote\""
        },
        "notification": {
            "type": "checkbox",
            "label": "Notification",
            "tooltip": "Notification_tooltip",
            "newLine": true,
            "default": false,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "setState": {
            "type": "setState",
            "label": "deleteText",
            "tooltip": "deleteSession",
            "id": "playstation.%INSTANCE%.session",
            "ack": true,
            "val": "",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "style": {
                "backgroundColor": "red",
                "border": "outset"
            }
        },
        "resetLogin": {
            "type": "checkbox",
            "label": "Reset Login counter",
            "newLine": true,
            "default": false,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        }
    }
}
