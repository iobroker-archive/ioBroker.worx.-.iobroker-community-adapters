{
    "i18n": true,
    "type": "panel",
    "items": {
        "mail": {
            "type": "text",
            "label": "APP username (eMail)",
            "newLine": true,
            "sm": 3,
            "hidden": "data.server === \"Remote\""
        },
        "password": {
            "type": "password",
            "newLine": true,
            "repeat": false,
            "visible": true,
            "sm": 3,
            "label": "App Password",
            "hidden": "data.server === \"Remote\""
        },
        "ip": {
            "type": "text",
            "label": "IP from Mower",
            "newLine": true,
            "sm": 3,
            "hidden": "data.server !== \"Remote\""
        },
        "pin": {
            "type": "password",
            "newLine": true,
            "repeat": false,
            "visible": true,
            "sm": 3,
            "label": "Pin Code",
            "hidden": "data.server !== \"Remote\""
        },
        "server": {
            "type": "select",
            "newLine": true,
            "sm": 3,
            "options": [
                {
                    "label": "Worx",
                    "value": "worx"
                },
                {
                    "label": "Kress",
                    "value": "kress"
                },
                {
                    "label": "Landxcape",
                    "value": "landxcape"
                },
                {
                    "label": "Ferrex",
                    "value": "ferrex"
                },
                {
                    "label": "Remote",
                    "value": "Remote"
                }
            ],
            "label": "App Name"
        },
        "intervalMower": {
            "type": "number",
            "label": "Update interval in seconds",
            "tooltip": "Range_1",
            "min": 1,
            "max": 86400,
            "step": 1,
            "newLine": true,
            "sm": 3,
            "default": 60,
            "hidden": "data.server !== \"Remote\""
        },
        "intervalCloud": {
            "type": "number",
            "label": "Update interval in minutes",
            "tooltip": "Range",
            "min": 60,
            "max": 1440,
            "step": 1,
            "newLine": true,
            "sm": 3,
            "default": 60,
            "hidden": "data.server === \"Remote\""
        },
        "edgeCutDelay": {
            "type": "number",
            "label": "delay for edge cut",
            "newLine": true,
            "default": 5000,
            "sm": 3,
            "hidden": "data.server === \"Remote\""
        },
        "meterMin": {
            "type": "checkbox",
            "label": "Distance and time in min and m",
            "newLine": true,
            "default": false,
            "sm": 3,
            "hidden": "data.server === \"Remote\""
        },
        "updateMqtt": {
            "type": "checkbox",
            "label": "Updating MQTT data after token update.",
            "newLine": true,
            "default": false,
            "sm": 3,
            "hidden": "data.server === \"Remote\""
        }
    }
}
